* { padding: 0px; margin: 0px; font-weight: normal; border: 0px; } /* CSS Reset */

#main {
    width: 200px;
    height: 150px;
    background-color: #ffffbb;
    margin: auto;
    margin-top: 20px;
    border: 4px solid black;
    border-radius: 8px;
    text-align: center;
    padding-top: 15px;
    font-family: Helvetica;
    font-size: 11pt;
}
body { background: #dddddd; }
#mainstation { font-size: 24pt; }
#otherstations { font-weight: bold; padding-top: 5px; }
#updating { color: #ff0000; }
#stationname { 
    color: #888888;
    font-size: 9pt;
    display: block;
    clear: left;
    padding-bottom: 5px;
}
